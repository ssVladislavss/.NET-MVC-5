@model IEnumerable<MVC_store.Areas.Admin.Models.ViewModels.Shop.OrdersForAdminVM>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
    <h2 class="text-center">В данный момент заказов нет</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsetName)
            </th>
            <th>
                Детали заказа
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
        </tr>

        @foreach (var item in Model)
        {
              <tr>
                  <td>
                      @Html.DisplayFor(modelItem => item.OrderNumber)
                  </td>
              
                  <td>
                      @Html.DisplayFor(modelItem => item.UsetName)
                  </td>
              
                  <td>
                      @foreach (var orderdetails in item.ProductsAndQty)
                      {
                          @orderdetails.Key @:x @orderdetails.Value <br />
                      }
                  </td>
                                         
                  <td>
                      @Html.DisplayFor(modelItem => item.CreatedAt)
                  </td>
              
                  <td>
                      @Html.DisplayFor(modelItem => item.Total) RUB
                  </td>
              </tr>
        }

    </table>
}

